{
  "name": "note toc",
  "description": "a google chrome extension to add a table of contents to articles of note.com",
  "version": "0.9.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://note.com/*",
        "https://note.jp/*"
      ],
      "run_at": "document_end",
      "css": [
        "src/tocbot.css",
        "src/style.css"
      ],
      "js": [
        "src/tocbot.min.js",
        "src/modules.js"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "https://note.com/*",
    "https://note.jp/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}